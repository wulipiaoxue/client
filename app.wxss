}
/* 底部导航 */
.home-bts {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  padding: 5rpx;
  left: 0;
  right: 0;
  bottom: 0;
  justify-content: space-around;
  align-items: center;
}
.home-bts text{
  margin-top: 8rpx;
}
