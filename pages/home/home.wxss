.home-container {
  padding-top: 106rpx;
  text-align: center;
}

.home-content {
  text-align: center;
  background-color: #fff;
  width: 92%;
  margin: 0 auto;
  padding: 30rpx 60rpx;
  border-radius: 10px;
  box-sizing: border-box;
}
.wx-card{
  width:90%;
  margin:0 auto;
  height:630rpx;
  background-color:#fff;
  padding:0 60rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  box-shadow: 2rpx 0rpx 30rpx #aaa;
}
.card-head{
  position: relative;
  width: 100%;
  height: 100rpx;
}
.image-box{
  width: 140rpx;
  height: 140rpx;
  background-color: #fff;
  border:1px solid transparent;
  border-radius: 50%;
  margin:0 auto;
  position: relative;
  top:-95%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tip{
  font-size:30rpx;
  background-color:#f02d19;
  height:50rpx;
  line-height: 50rpx;
  color:#fff;
  position: absolute;
  bottom:0;
  left:0;
  right:0;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.home-user-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20px;
  border-radius: 50rpx;
}

.commands {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}

.commands text {
  margin-top: 6rpx;
  font-size: 32rpx;
}

.input-command {
  width: 400rpx;
  border-bottom: 1px solid #d8d8d8;
  font-size:32rpx;
}

.messages {
  display: flex;
  flex-direction: row;
  margin-bottom: 25rpx;
}

.text-message {
  color: #9a9a9a;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  margin: 10rpx 0;
}

.text-message-img {
  width: 25rpx;
  height: 25rpx;
  margin-top: 15rpx;
}

.moneys {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.moneys text {
  margin-top: 6rpx;
  font-size: 32rpx;
}

.input-money {
  width: 400rpx;
  border-bottom: 1px solid #d8d8d8;
  font-size: 32rpx;
}

.nums {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.nums text {
  margin-top: 6rpx;
  font-size: 32rpx;
}

.input-num {
  width: 400rpx;
  border-bottom: 1px solid #d8d8d8;
  font-size: 32rpx;
}

.text-message2 {
  color: #999;
  font-size:26rpx;
  display: block;
  margin:40rpx 0;
}

