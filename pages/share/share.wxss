page{
  background-color: #f02d19;
  height: 100%;
}
.share-container{
  display: flex;
  flex-direction: column;
  text-align: center;
  height:100%;
}
.ava-box{
  margin-top:50rpx; 
  margin-bottom: 10rpx;
}
.share-icon{
  width: 126rpx;
  height: 126rpx;
  border:8rpx solid #ffd5a5;
  border-radius: 70rpx;
}
.share-message-container{
  display: flex;
  flex-direction: row;
  justify-content:  center;
}
.share-message-container text{
  color: #ffd5a5;
  font-size: 30rpx;
}
.share-command{
  display: flex;
  justify-content: center;
  width:80%;
  margin:70rpx auto 60rpx;
}
.share-command image{
  width:48rpx;
  height:52rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.share-title{
  font-size: 39rpx;
  color: #fcdcad;
  letter-spacing: 2rpx;
}
.share-bottom{
  position: relative;
  width:100%;
  height:100%;
}
.share-bottom-bg{
  position: absolute;
  z-index:0;
  top:0;
  left:0;
  right:0;
  bottom:0;
  width:100%;
  height:100%;
}
.share-fold{
  display: flex;
  justify-content: center;
  align-items: center;
  height:400rpx;
  position: relative;
}
.share-fold .fold{
  width:750rpx;
  height:244rpx;
  position: absolute;
  top:0;
  left:0;
  right:0;
}
.share-icon-box{
  width:350rpx;
  height:350rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.share-icon-box .share-circle{
  position: absolute;
  top:0;
  left:0;
  right:0;
  width:350rpx;
  height:350rpx;
  z-index: 1;
} 
.share-click{
  width:200rpx;
  height:200rpx;
  border:16rpx solid #ffd5a5;
  border-radius: 116rpx;
  position: relative;
  z-index:2;
  top:2rpx;
}
.share-bt{
  margin-top: 48rpx;
  margin-bottom: 48rpx;
  border-radius: 60rpx;
  width: 530rpx;
  height: 112rpx;
  border:8rpx solid #ffd5a5;
  text-align: center;
  background-color: #f02d19;
  color: #ffd5a5;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 30rpx 4rpx rgba(112,1,5,0.7);
}
.share-back{
  position: relative;
  color:#ffd5a5;
  z-index: 1;
  font-size: 28rpx;
}


